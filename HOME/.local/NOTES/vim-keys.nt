noremap <leader>ac :r ! cat ~/.local/tmp/clip.txt<cr>kdd
let mapleader = " "
vnoremap <leader>ah :s/^/#/
vnoremap <leader>at :s/$/#/
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l
"  map copy an paste
noremap <leader>y "+y
noremap <leader>p "+p
noremap <leader>Y "*y
noremap <leader>P "*p
noremap <leader>B :enew<CR>
noremap <leader>b :enew<CR>:NERDTreeFocus<CR>
noremap <leader>l :bnext<CR>
