<Leader>	=	Space Bar
	# Normal Mode
:reg = list registers
:sav = Save as
:term = open term (ctrl-w :q) to close  	
 # Movement in document 
hjkl = Move 
<num>hjkl = move <num>

gg = Top of Doc 
H  = Top of current screen
M  = Middle of current screen
L  = Bottom of current screen
G  = Bottom of Doc  

 # Movement on line
0 = start of line   
^ = first (non blank) on line
$ = end of line  
w = start of next word
b = start of prev word 
  # Editing on line
s = del character and replace (I)

 #PERSONAL HotKeys

noremap <leader>ac :r ! cat ~/.local/tmp/clip.txt<cr>kdd
noremap <leader>PI :PlugInstall
noremap <leader>co :ColorToggle
noremap <leader>T :0r ~/skels/gas-template.txt<CR>:call SpawnMod()<cr>:call LastMod()<cr>
noremap <leader>D :call SpawnMod()<cr>

noremap <leader>y "+y
noremap <leader>p "+p
noremap <leader>Y "*y
noremap <leader>P "*p

noremap <leader>B :enew<CR>
noremap <leader>b :enew<CR>:NERDTreeFocus<CR>
noremap <leader>l :bnext<CR>
noremap <leader>h :bprevious<CR>
----> Nerdtree
noremap <leader>n :NERDTreeFocus<CR>
noremap <C-n> :NERDTree<CR>
noremap <C-t> :NERDTreeToggle<CR>
noremap <C-f> :NERDTreeFind<CR>

map <leader>tt :tabnew<cr>:NERDTreeFocus<CR>
map <leader>tn :tabnew<cr>
map <leader>to :tabonly<cr>
map <leader>tc :tabclose<cr>
map <leader>tm :tabmove
map <leader>t<leader> :tabnext<cr>
----->FZF
noremap <leader>f :NERDTreeToggle<CR>:FZF<CR>
noremap <leader>ff :NERDTreeToggle<CR>:FZF!<CR>

	# Visual Mode
# substitute 
vnoremap <leader>ah :s/^/#/
vnoremap <leader>at :s/$/#/





